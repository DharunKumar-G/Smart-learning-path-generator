# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file!

# Database Configuration
POSTGRES_USER=learnpath
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=learnpath

# Backend Configuration
NODE_ENV=production
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# OpenAI API Key (Required for AI features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database URL (auto-generated in Docker, set manually for local dev)
DATABASE_URL=postgresql://learnpath:your-secure-password-here@localhost:5432/learnpath?schema=public

# Frontend Configuration (if needed)
VITE_API_URL=http://localhost:3001
